@{
    ViewData["Title"] = "Login";
}
<div style="margin-left:30px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="color:yellow">請輸入帳號與密碼</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <p style="color:yellow">帳號 (Email)</p>
                <div class="col-md-10">
                    @Html.TextBox("txtEmail", "lsdr37@gmail.com", new { autocomplete = "off" })
                </div>
            </div>
            <div style="color:red" id="errdiv">@ViewBag.accerrorstring</div>
            <div class="form-group">
                <p style="color:yellow">密碼</p>
                <div class="col-md-10">
                    <input type="password" name="txtPassword" id="txtPassword">
                    @*@Html.TextBox("txtPassword", "asdf5678", new { autocomplete = "off" })*@
                </div>
            </div>
            <div style="color:red" id="errdiv">@ViewBag.errstring</div>
            <div style="display: inline-flex;align-items: center">
                <label style="color:yellow;margin-top:8px">顯示密碼:</label><input id="showpassword" style="margin-left:10px" type="checkbox">
            </div>
            <hr>
            <div class="form-group">
                <div class="col-md-offset-0 col-md-10">
                    <input type="submit" value="登入" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<script>

    var showpass = document.getElementById('showpassword');
    var password = document.getElementById('txtPassword')

    showpass.addEventListener('change', function() {
    if (showpass.checked) {
      password.type = 'text';
    } else {
      password.type = 'password';
    }
  });

    function clearContent() {
        const contentDiv = document.getElementById("errdiv");
        contentDiv.innerHTML = "";
    }

    setTimeout(clearContent, 5000);

</script>