<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ISpan.Project_02.Demo</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <!-- https://fonts.google.com/specimen/Roboto -->
    <link rel="stylesheet" href="~/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/templatemo-style.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="https://kit.fontawesome.com/2efd1879c1.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-xl">
            <div class="container h-100">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <h1 class="tm-site-title mb-0">首頁</h1>
                </a>
                <button class="navbar-toggler ml-auto mr-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars tm-nav-icon"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto h-100">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="List">
                                <i class="fas fa-users"></i>
                                會員
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="List">
                                <i class="fas fa-box"></i>
                                商品
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Order" asp-action="List">
                                <i class="fas fa-truck"></i>
                                訂單
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Report" asp-action="List">
                                <i class="fas fa-comments"></i>
                                客服訊息
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Charts" asp-action="List">
                                <i class="fas fa-chart-simple"></i>
                                圖表
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-gear"></i>
                                <span>
                                    系統設定 <i class="fas fa-angle-down"></i>
                                </span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Webmaster" asp-action="Create">網站管理</a>
                                <a class="dropdown-item" href="#">支付管理</a>
                            </div>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link d-block" asp-controller="Home" asp-action="Logout">
                                <i class="fas fa-right-to-bracket"></i>
                                <p style="font-size:20px">登出</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-block" asp-controller="Admin" asp-action="Create">
                                <i class="fas fa-right-to-bracket"></i>
                                <p style="font-size:20px">註冊</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="overflow-x:scroll;overflow-y:scroll;height:auto">
        @RenderBody()
    </div>

    <footer class="tm-footer row tm-mt-small" style="height:12px">
        <div class="col-12 font-weight-light">
            <p class="text-center text-white mb-0 px-4 small">
                Copyright &copy; <b>2018</b> All rights reserved.

                Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
            </p>
        </div>
    </footer>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/Chart.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/tooplate-scripts.js"></script>
    <script src="~/js/jquery.sparkline.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
